<h1> List of all Users </h1>

<table>
    <thead> 
        <tr>
        <th>User ID</th>
        <th>User Name</th>
        <th>User Role</th>
        <th>Email</th>
        <th>phone</th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user|  %>
            <tr> 
                <td> <%= user.id %> </td>
                <td> <%= user.name %> </td>
                <td> <%= user.role %> </td>
                <td> <%= user.email %> </td>
                <td> <%= user.phone %> </td>
                <td> <%= link_to "details", user  %> </td>
                <td> <%= link_to "edit", edit_user_path(user)  %> </td>
                <td> <%= link_to "delete", user,  data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}  %> </td>



            </tr>
        <% end %>
    
    </tbody>

</table>