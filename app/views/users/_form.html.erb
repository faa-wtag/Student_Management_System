<%= form_with model: user do |form| %>
<div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
</div>

<div>
     <%= form.label :email %><br>
    <%= form.text_field :email %>
</div>

<div>
    <%= form.label :phone %><br>
    <%= form.text_field :phone %>
</div>



<div>
      <%= form.select :role, options_for_select(['student','teacher', 'admin'], @user.role) %>
</div>


<div>
    <%= form.submit %>
</div>

<% end %>