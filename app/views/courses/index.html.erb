<h1> List of All Offered Courses </h1>


<table>
    <thead> 
        <tr>
        <th>Course_Title</th>
        <th>Course_Code</th>
        </tr>
    </thead>

    <tbody>
        <% @courses.each do |course|  %>
            <tr>    
                <td> <%= course.course_title %> </td>
                <td> <%= course.course_code %> </td>

                <td> <%= link_to "details", course  %> </td>
                <td> <%= link_to "edit", edit_course_path(course)  %> </td>
                <td> <%= link_to "delete", course,  data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}  %> </td>



            </tr>
        <% end %>
    
    </tbody>

</table>